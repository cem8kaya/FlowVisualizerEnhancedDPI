# Kubernetes Secrets Template
# Copy this file to secrets.yaml and replace the base64-encoded values
# DO NOT commit secrets.yaml to version control

apiVersion: v1
kind: Secret
metadata:
  name: callflowd-secrets
  namespace: callflowd
type: Opaque
data:
  # JWT secret for authentication (base64 encoded)
  # To generate: echo -n "your-secret-key" | base64
  jwt-secret: Q0hBTkdFX1RISVNfU0VDUkVUX0lOX1BST0RVQ1RJT04=

  # Optional: Database password (if using external DB)
  # db-password: <base64-encoded-password>

# To apply:
# kubectl apply -f secrets.yaml
